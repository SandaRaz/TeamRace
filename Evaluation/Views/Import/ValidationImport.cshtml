@model Evaluation.Models.ViewModel.ImportMTDPViewModel;


<div class="bd-intro mt-2">
    <div class="d-md-flex flex-md-row align-items-center justify-content-between mb-3">
        <h3>Veuillez confirmer l'importation </h3>
    </div>
    <!-- <p class="bd-lead"></p> -->
</div>
<div class="bd-content ps-5 pe-5 pt-4 pb-4 bg-white shadow rounded col-8">
    <div class="row">
        <div class="col-6 mb-3 ">
            <label for="inputCsvMaisonTravaux" class="form-label">Maison et travaux</label>
            <div class="input-group">
                <input type="file" class="form-control" id="inputCsvMaisonTravaux" accept="/*" asp-for="MaisonTravauxCsv">
            </div>
        </div>
        <div class="col-6 mb-3 ">
            <label for="inputCsvDevis" class="form-label">Devis</label>
            <div class="input-group">
                <input type="file" class="form-control" id="inputCsvDevis" accept="/*" asp-for="DevisCsv">
            </div>
        </div>
        <div class="mt-2 pt-2 border-top">
            <button type="button" class="btn btn-danger btn-sm" onclick="location.href='@Url.Action("","")'">Importer</button>
            <button type="button" class="btn btn-secondary btn-sm" onclick="location.href='@Url.Action("","")'">Annuler</button>
        </div>
            
    </div>
</div>

<script type="text/javascript" defer src="~/js/operations/importCsvMaisonTravauxDevis.js"></script>